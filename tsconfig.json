{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "WebWorker"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "@cloudflare/vitest-pool-workers",
      "vitest"
    ]
  },
  "include": [
    "src",
    "src/**/*.test.ts",
    "worker-configuration.d.ts"
  ]
}